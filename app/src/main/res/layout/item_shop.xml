<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.ballboycorp.tingting.shop.model.ShopItemViewModel" />
        <variable
            name="clickHandler"
            type="com.ballboycorp.tingting.shop.ShopActivity.ClickHandler" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="H, 360:80">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:id="@+id/iv_thumb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:duration="@{viewModel.duration}"
                app:amount="@{viewModel.amount}"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintRight_toLeftOf="@id/button_use"
                app:layout_constraintStart_toEndOf="@+id/iv_thumb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0sp"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:theme="@style/BoldTextView"
                    android:text="@{viewModel.duration == 30 ? @string/text_duration_30 : @string/text_duration_60}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/text_duration"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/text_x"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:theme="@style/BoldTextView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:lineSpacingExtra="0sp"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:theme="@style/BoldTextView"
                    android:text="@{``+viewModel.amount}"
                    tools:text="1" />
            </LinearLayout>
            <Button
                android:layout_width="88dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="@{() -> clickHandler.onClickBuy(viewModel.shopItem)}"
                android:text="@{String.format(@string/text_price, viewModel.price)}"
                android:id="@+id/button_use"
                android:textColor="@color/colorAccent"
                android:theme="@style/BoldTextView"
                android:background="@drawable/button_black_outline"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>