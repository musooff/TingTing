<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_margin="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_coin"
                    android:layout_toStartOf="@id/iv_coin"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:text="내 코인 현황" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/iv_coin"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/text_coin_count"
                    android:layout_toStartOf="@id/text_coin_count"
                    android:src="@drawable/ic_coin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/text_coin_count"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/text_coin_guide"
                    android:layout_toLeftOf="@id/text_coin_guide"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:text="3코인" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@id/iv_announcement"
                    android:layout_toStartOf="@id/iv_announcement"
                    android:id="@+id/text_coin_guide"
                    android:textColor="@color/colorRed"
                    android:lineSpacingExtra="0sp"
                    android:text="첫입장 +1" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@id/text_luck"
                    android:layout_toLeftOf="@id/text_luck"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_announcement"
                    android:background="@drawable/shape_rectangle_red_4"
                    android:src="@drawable/ic_announcement"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:id="@+id/text_luck"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:lineSpacingExtra="0sp"
                    android:layout_toStartOf="@id/iv_question_mark"
                    android:layout_toLeftOf="@id/iv_question_mark"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_rectangle_red_4"
                    android:text="행운상자뽑기" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_question_mark"
                    android:src="@drawable/ic_question_mark"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>