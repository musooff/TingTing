<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.ballboycorp.tingting.review.ReviewViewModel"/>
        <variable
            name="clickHandler"
            type="com.ballboycorp.tingting.review.ReviewActivity.ClickHandler" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/container_review_header">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/iv_star"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_star"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:layout_toRightOf="@id/iv_star"
                    android:layout_toEndOf="@id/iv_star"
                    android:theme="@style/BoldTextView"
                    android:text="@{viewModel.rating}"
                    android:layout_centerVertical="true"
                    tools:text="4.0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorBlackSecond"
                android:lineSpacingExtra="0sp"
                android:theme="@style/BoldTextView"
                android:id="@+id/text_total_points"
                app:layout_constraintTop_toBottomOf="@id/container_review_header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/total_points_text"/>
            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:id="@+id/view_line_information_title"
                app:layout_constraintLeft_toLeftOf="@id/text_total_points"
                app:layout_constraintRight_toRightOf="@id/text_total_points"
                app:layout_constraintTop_toBottomOf="@id/text_total_points"
                android:background="@color/colorPrimary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox"
                android:checked="@={viewModel.onlyWithImages}"
                android:theme="@style/CheckBox"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:onClick="@{() -> clickHandler.onClickCheckBoxText()}"
                android:layout_toLeftOf="@id/checkbox"
                android:layout_toStartOf="@id/checkbox"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlackSecond"
                android:lineSpacingExtra="0sp"
                android:text="@string/only_photo_checkbox"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/rv_reviews"
            android:background="@color/colorWhite"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</layout>