<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.ballboycorp.tingting.pocha.game.model.GameStatusItemViewModel" />
        <variable
            name="clickHandler"
            type="com.ballboycorp.tingting.pocha.game.GameFragment.ClickHandler" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/image_winner"
            app:layout_constraintDimensionRatio="H, 336:150">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorBlackSecond"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                android:text="@string/text_winner_name"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginEnd="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/placeholder_thumb"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/colorAccent"
                            android:lineSpacingExtra="0sp"
                            android:gravity="center"
                            tools:text="가위바위보"
                            android:text="@{viewModel.game.title}"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="88dp"
                        android:layout_height="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:background="@drawable/shape_rectangle_blue_1_top_left"
                            android:textSize="10sp"
                            android:textColor="@color/colorWhite"
                            android:lineSpacingExtra="0sp"
                            android:text="@string/text_game_description"
                            tools:ignore="RtlSymmetry,SmallSp" />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:srcCompat="@drawable/ic_question_mark_blue"/>
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/placeholder_thumb"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/colorAccent"
                            android:lineSpacingExtra="0sp"
                            android:gravity="center"
                            android:text="@{viewModel.bet.title}"
                            tools:text="가위바위보"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="88dp"
                        android:layout_height="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/shape_rectangle_blue_1_top_left"
                            android:lineSpacingExtra="0sp"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            android:text="@{viewModel.bet.price}"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            tools:ignore="RtlSymmetry,SmallSp" />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:srcCompat="@drawable/ic_currency_blue"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_red_banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="0sp"
            android:layout_marginTop="4dp"
            android:text="@string/text_last_game_winner" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>