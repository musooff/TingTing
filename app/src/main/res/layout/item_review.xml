<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.ballboycorp.tingting.review.model.ReviewItemViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="H, 336:88"
        android:paddingTop="14dp"
        android:background="@color/colorWhite"
        android:paddingBottom="14dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/iv_thumb"
            android:src="@drawable/icon_profile_thumb_male"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_thumb"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:theme="@style/BoldTextView"
                android:id="@+id/text_nickname"
                android:textColor="@color/colorBlackSecond"
                android:lineSpacingExtra="0sp"
                tools:text="닉네임"
                android:text="@{viewModel.nickname}"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="4"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#535763"
                android:lineSpacingExtra="0sp"
                android:text="@{viewModel.description}"
                tools:text="분위기 너무 재밌고 맨날 가고싶어요~!"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="10sp"
            android:text="@{viewModel.time}"
            android:textColor="#9ca0ae"
            android:lineSpacingExtra="0sp"
            android:gravity="end"
            tools:text="12시간전"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>