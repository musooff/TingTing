<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickHandler"
            type="com.ballboycorp.tingting.pocha.details.PochaDetailsActivity.ClickHandler"/>
        <variable
            name="viewModel"
            type="com.ballboycorp.tingting.pocha.details.PochaDetailsViewModel"/>
    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHomeBackground">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/iv_thumb"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/placeholder_thumb"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H, 360:220"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/toolbar"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/iv_back"
                        android:onClick="@{()-> clickHandler.onClickBack()}"
                        app:srcCompat="@drawable/ic_arrow_left_white_24dp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_liked"
                        android:layout_toLeftOf="@id/iv_share"
                        android:layout_toStartOf="@id/iv_share"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:onClick="@{()-> clickHandler.onClickLike()}"
                        app:activated="@{viewModel.liked ? true : false}"
                        android:src="@drawable/ic_liked_selector"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_share"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_share_white_24dp"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="@id/iv_thumb">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/iv_location"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:srcCompat="@drawable/ic_location_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_location"
                    app:layout_constraintLeft_toRightOf="@id/iv_location"
                    android:textSize="12sp"
                    android:textColor="@color/colorRed"
                    android:lineSpacingExtra="0sp"
                    tools:text="부평구 부평대로 31길"
                    android:text="@{viewModel.location}"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/container_review_count"
                    app:layout_constraintBottom_toTopOf="@id/iv_location"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_like_count"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:lineSpacingExtra="0sp"
                        tools:text="리뷰 324"
                        android:text="@{viewModel.reviewCount}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:lineSpacingExtra="0sp"
                        android:text="|"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/text_review_count"
                        android:textColor="@color/colorWhite"
                        android:lineSpacingExtra="0sp"
                        tools:text="사장님 댓글 202"
                        android:text="@{viewModel.commentCount}"
                        />
                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:rating="4"
                    android:theme="@style/HomeRatingBar"
                    android:numStars="5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/colorPrimary"
                    android:lineSpacingExtra="0sp"
                    android:gravity="center"
                    android:text="@{viewModel.rating}"
                    app:layout_constraintBottom_toTopOf="@id/rating_bar"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="4.0"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/container_review_count"
                    android:textSize="20sp"
                    android:id="@+id/title"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="0sp"
                    android:layout_marginBottom="8dp"
                    tools:text="한신포차 부평점"
                    android:text="@{viewModel.title}"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/container_introduction"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/iv_thumb"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:id="@+id/text_intro_header"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/pocha_intro_header"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/view_line_intro_title"
                    app:layout_constraintLeft_toLeftOf="@id/text_intro_header"
                    app:layout_constraintRight_toRightOf="@id/text_intro_header"
                    app:layout_constraintTop_toBottomOf="@id/text_intro_header"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#535763"
                    android:lineSpacingExtra="4sp"
                    android:id="@+id/text_intro_description"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_line_intro_title"
                    android:layout_marginTop="14dp"
                    android:text="@{viewModel.description}"
                    tools:text="인천에서 가장 맛있는 술집, 1시간 마다 룰렛을 돌려서 당첨된 테이블은 그때까지 나온 금액 모두 공짜!"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_intro_description"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="#535763"
                    android:lineSpacingExtra="4sp"
                    android:text="@{viewModel.descriptionMore}"
                    tools:text="ㆍ8시 이전 여성 입장시 소주 1병 무료\nㆍSNS 공유시 음료수 1병 무료"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container_menu"
                android:layout_marginTop="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/container_introduction">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:id="@+id/text_menu_header"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/pocha_menu_header"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/view_line_menu_title"
                    app:layout_constraintLeft_toLeftOf="@id/text_menu_header"
                    app:layout_constraintRight_toRightOf="@id/text_menu_header"
                    app:layout_constraintTop_toBottomOf="@id/text_menu_header"
                    android:background="@color/colorPrimary"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/container_menu_top_2"
                    app:layout_constraintTop_toBottomOf="@id/view_line_menu_title"
                    android:layout_marginTop="14dp">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:id="@+id/fl_menu1"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintRight_toLeftOf="@id/fl_menu2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <include
                            layout="@layout/item_pocha_menu"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:id="@+id/fl_menu2"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fl_menu1">
                        <include
                            layout="@layout/item_pocha_menu"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/container_menu_bottom_2"
                    app:layout_goneMarginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/container_menu_top_2"
                    android:layout_marginTop="14dp">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:id="@+id/fl_menu3"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintRight_toLeftOf="@id/fl_menu4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <include
                            layout="@layout/item_pocha_menu"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:id="@+id/fl_menu4"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fl_menu3">
                        <include
                            layout="@layout/item_pocha_menu"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container_information"
                android:layout_marginTop="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/container_menu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:id="@+id/text_location_header"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/pocha_information_header"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/view_line_information_title"
                    app:layout_constraintLeft_toLeftOf="@id/text_location_header"
                    app:layout_constraintRight_toRightOf="@id/text_location_header"
                    app:layout_constraintTop_toBottomOf="@id/text_location_header"
                    android:background="@color/colorPrimary"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container_review"
                android:layout_marginTop="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/container_information">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:id="@+id/text_review_header"
                    android:textColor="@color/colorBlackSecond"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/pocha_review_header"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/view_line_review_title"
                    app:layout_constraintLeft_toLeftOf="@id/text_review_header"
                    app:layout_constraintRight_toRightOf="@id/text_review_header"
                    app:layout_constraintTop_toBottomOf="@id/text_review_header"
                    android:background="@color/colorPrimary"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>