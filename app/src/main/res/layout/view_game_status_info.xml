<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="clickHandler"
            type="com.ballboycorp.tingting.pocha.game.GameFragment.ClickHandler" />

        <variable
            name="viewModel"
            type="com.ballboycorp.tingting.pocha.game.model.GameStatusItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:id="@+id/container_game_bet"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="72dp"
            android:layout_marginLeft="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/container_game"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintRight_toLeftOf="@id/container_bet"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/container_game_thumb"
                        app:cardBackgroundColor="@color/colorGrey"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/text_game_name"
                        app:layout_constraintDimensionRatio="1:1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            android:layout_margin="2dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/image_game"
                                android:scaleType="fitXY"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="@id/container_game_thumb"
                        app:layout_constraintRight_toRightOf="@id/container_game_thumb"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:id="@+id/text_game_name"
                        android:paddingTop="8dp"
                        android:text="@{viewModel.game.title}"
                        android:textColor="@color/colorBlackSecond"
                        android:lineSpacingExtra="0sp"
                        android:gravity="center"
                        tools:text="가위바위보"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="@id/container_game_thumb"
                        app:layout_constraintLeft_toLeftOf="@id/container_game_thumb"
                        android:background="@drawable/shape_rectangle_blue_1_top_left"
                        android:lineSpacingExtra="0sp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_game_description"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        tools:ignore="RtlSymmetry,SmallSp" />
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:srcCompat="@drawable/ic_question_mark_blue" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/container_bet"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/container_game"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/container_bet_thumb"
                        app:cardBackgroundColor="@color/colorGrey"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/text_bet_name"
                        app:layout_constraintDimensionRatio="1:1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            android:layout_margin="2dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/image_cham"
                                android:scaleType="fitXY"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_bet_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingExtra="0sp"
                        android:paddingTop="8dp"
                        android:text="@{viewModel.bet.title}"
                        android:textColor="@color/colorBlackSecond"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/container_bet_thumb"
                        app:layout_constraintRight_toRightOf="@id/container_bet_thumb"
                        tools:ignore="SmallSp"
                        tools:text="가위바위보" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="@id/container_bet_thumb"
                        app:layout_constraintLeft_toLeftOf="@id/container_bet_thumb"
                        android:background="@drawable/shape_rectangle_blue_1_top_left"
                        android:lineSpacingExtra="0sp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.bet.price}"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        tools:text="Sdnfkj"
                        tools:ignore="RtlSymmetry,SmallSp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_currency_blue" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>