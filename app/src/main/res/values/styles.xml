<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/test_font</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/test_font</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBlackSeventh</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="HomeRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBlackSecond</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat">
        <item name="thumbTint">@color/colorWhite</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

    <style name="LightTextView" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/nanum_barun_gothic_light</item>
    </style>

    <style name="BoldTextView" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/nanum_barun_gothic_bold</item>
    </style>

    <style name="RegularTextView" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
    </style>

    <style name="UltraLightTextView" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/nanum_barun_gothic_ultra_light</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
